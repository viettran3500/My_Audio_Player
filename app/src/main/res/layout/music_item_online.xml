<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="recyclerData"
            type="com.viet.myaudioplayer.model.SongInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/audio_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#000000">

        <LinearLayout
            android:id="@+id/layout"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgThumbnail"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="5dp"
                app:loadImage="@{recyclerData.thumbnail}"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFFFFF"
                android:text="@{recyclerData.getDuration(recyclerData.duration)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/layout"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{recyclerData.title}"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_marginVertical="5dp"
                android:id="@+id/tvArtistsNames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{recyclerData.artistsNames}"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tvGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{recyclerData.genre}"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imgDownload"
                android:background="@drawable/ic_baseline_arrow_downward_24"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <ImageButton
                android:id="@+id/imgLove"
                loadImgFavorite="@{recyclerData.id}"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
